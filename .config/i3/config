    #status_command i3status
    #status_command /opt/status/status.py
    status_command /opt/status-parallel/target/release/status-parallel 2> /opt/status-parallel/err.log
    font pango:Monofur Nerd Font Mono 17
    separator_symbol " "
    tray_output primary
    colors{
        background $gray-2-color
        focused_workspace  $gray-2-color $blue-color   $gray-1-color
        active_workspace   $gray-2-color $gray-4-color $white-color
        inactive_workspace $gray-2-color $gray-4-color $white-color
        urgent_workspace   $gray-2-color $red-color    $white-color
        binding_mode       $gray-2-color $gray-1-color $gray-5-color
    }
}

bindsym $mod+r mode "resize"


